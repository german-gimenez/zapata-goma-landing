{
  "name": "zapata-goma-landing",
  "version": "1.0.0",
  "description": "Landing page brutalista de 'coming soon' para Zapata Goma",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 8000 -c-1",
    "dev": "http-server -p 8000 -c-1 -o",
    "build": "npm run minify",
    "minify": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css styles.css",
    "minify-js": "terser script.js -o dist/script.min.js -c -m",
    "deploy": "npm run build && gh-pages -d .",
    "serve": "http-server -p 8000"
  },
  "keywords": [
    "landing-page",
    "brutalismo",
    "coming-soon",
    "zapata-goma",
    "industrial"
  ],
  "author": "Zapata Goma",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "gh-pages": "^6.1.0",
    "http-server": "^14.1.1",
    "terser": "^5.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zapatagoma/landing-page.git"
  },
  "homepage": "https://zapatagoma.github.io/landing-page",
  "engines": {
    "node": ">=14.0.0"
  }
}